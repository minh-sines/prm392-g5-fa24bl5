<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonShape">
        <item name="cornerSize">3dp</item>
    </style>

    <style name="customLoginButton" parent="ButtonShape">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="customInputBackground">
        <item name="android:background">@drawable/input_login_background</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#787878</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="inputEmail" parent="customInputBackground">
        <item name="android:drawableStart">@drawable/ic_email</item>
        <item name="android:hint">Email</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="inputPassword" parent="customInputBackground">
        <item name="android:drawableStart">@drawable/ic_lock_open</item>
        <item name="android:hint">Mật khẩu</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="inputRepassword" parent="customInputBackground">
        <item name="android:drawableStart">@drawable/ic_lock_open</item>
        <item name="android:hint">Xác nhận mật khẩu</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="inputUser" parent="customInputBackground">
        <item name="android:drawableStart">@drawable/ic_account</item>
        <item name="android:hint">Họ và tên</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="customCheckboxStyle">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#787878</item>
        <item name="android:text">Tôi đồng ý nhận các bản tin về gợi ý  món ngon, cách làm hay và những thông tin khác từ Cookedat 12h50pm.</item>
        <item name="android:paddingStart">8dp</item>
    </style>
</resources>